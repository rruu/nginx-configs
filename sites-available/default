server {
	server_name  localhost;

	access_log  off;

	root   /var/www/nginx-default;
	
	location / {
		try_files $uri $uri/ /index.html;
	}

	error_page   500 502 503 504  /50x.html;

	location /nginx_status {
                stub_status on;
                access_log   off;
                allow 127.0.0.1;
                deny all;
        }
	include global/restrictions.conf;
}

